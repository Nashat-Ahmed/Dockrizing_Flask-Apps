pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                script {
                    def mvnHome = tool 'maven-3.9' // Configure Maven tool in Jenkins
                    sh "${mvnHome}/bin/mvn clean compile"
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    def mvnHome = tool 'maven-3.9'
                    sh "${mvnHome}/bin/mvn test"
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                // Add deployment steps here
            }
        }
    }
}
